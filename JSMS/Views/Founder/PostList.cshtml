@model IEnumerable<JSMS.Models.DataBaseModels.Post>

    @{
        ViewData["Title"] = "PostList";
        Layout = "~/Views/Shared/HomeFounder.cshtml";
    }

    <h1>PostList</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Post_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post_Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post_Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Post_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Post_Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Post_Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Post_Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Post_Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Post_Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
